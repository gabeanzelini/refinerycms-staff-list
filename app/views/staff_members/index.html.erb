<% content_for :body_content_title do %>
  <%= t('plugins.refinerycms_staff_list.title') %>
<% end %>
<% content_for :body_content_left do %>
    <ul>
        <% StaffMember.categories.each do |cat| %>
            <li><%= link_to cat, staff_member_path(:id => cat.underscore)%></li>
        <% end %>
    </ul>
<% end %>
<% content_for :body_content_right do %>
  <% if @staff_members.any? %>
      <% 
          @staff_members.sort_by(&:category).each do |item| 
            if @category.nil? or @category != item.category
                @category = item.category
      %>
      <h2 id="<%= @category.underscore %>"><%= item.category %></h2>
          <% end %>
      <article class="staff_member_truncated">
      <%= image_tag item.image.thumbnail('175x175').url if item.image %>
        <h3><%= item.name %></h3>
        <p>
          <small><%= item.title %></small>
        </p>
        <%= raw item.bio %>
      </article>
    <% end %>
  <% else %>
    <p><em><%= t('.no_items_yet') %></em></p>
  <% end %>
<% end -%>

<%= render :partial => "/shared/content_page" %>
